@{
    ViewData["Title"] = "Teachers";
}
@section Styles {

    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" type="text/css" rel="stylesheet" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/jqueryui-editable/css/jqueryui-editable.css" rel="stylesheet"/>
    <link href="~/plugins/select/selectr.min.css" rel="stylesheet"/>
}
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-end">
                <button type="button" id="add-student-button" class="btn btn-outline-primary mt-3 btn-round ms-auto d-flex" data-bs-toggle="modal" data-bs-target="example">+Add New</button>
                 
            </div>           
              <h2 class="page-title mt-3">Teachers</h2>              
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<div class="row">
    <div class="col-12">
        <div class="card mt-3">
            <div class="card-body">
                <div class="card-body">
                        <div class="mb-3">
                            <div class="row form-row">
                                <div class="col-md col-sm-4">
                                    <label for="">Class</label>
                                    <input type="text" name="From" class="form-control" placeholder="Class">
                                </div>
                                <div class="col-md col-sm-4">
                                    <label for="inputEmail4">stream </label>
                                    <input type="text" name="To" class="form-control" placeholder="Stream">
                                </div>
                                <div class="col-md col-sm-4">
                                    <label for="inputEmail4">Status:</label>
                                    <select id="T_Status" name="Status" class="custom-select form-control" placeholder="Status">
                                        <option selected>All</option>
                                        <option value="Pending">Pending Approval</option>
                                        <option>Processing</option>
                                        <option value="Processed">Successfull</option>
                                        <option>Failed</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <table id="accounts-datatable" class="table dt-responsive">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Sex</th>
                                    <th>Age</th>
                                    <th>PG Telephone</th>
                                    <th>Country</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                </div>               
            </div>
        </div>
    </div>
</div>

<!-- modal-dialog -->

<div class="modal fade bd-example-modal-lg" id ="example" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      ...
    </div>
  </div>
</div>

